<UserControl x:Class="UniversalLogoMaker.Views.Steps.Step2ChooseSizesUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="using:UniversalLogoMaker.Models"
             d:DesignHeight="300"
             d:DesignWidth="400"
             DataContext="{Binding Source={StaticResource Locator}, Path=StartVm}"
             mc:Ignorable="d">

    <UserControl.Resources>
        <DataTemplate x:Key="PlatformTemplate" x:DataType="models:Platform">
            <Grid>
                <ToggleSwitch IsOn="{x:Bind IsEnabled, Mode=TwoWay}" />
            </Grid>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <ListView ItemTemplate="{StaticResource PlatformTemplate}" ItemsSource="{x:Bind Vm.Data.PlatformList, Mode=OneWay}" />
    </Grid>
</UserControl>
