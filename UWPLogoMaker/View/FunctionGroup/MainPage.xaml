                            <TextBlock HorizontalAlignment="Center"
                                       FontFamily="Segoe UI Light"
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource Brush5}"
                                       Text="Load Image"
                                       TextWrapping="Wrap" />
                        </StackPanel>

                    </Button>

                    <Button Grid.Row="1"
                            Grid.Column="1"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Background="#8BC34A"
                            Tapped="GenerateLogo_OnTapped">

                        <StackPanel Margin="4" VerticalAlignment="Center">
                            <Path Width="30"
                                  Height="30"
                                  Margin="4"
                                  Data="M30.561941,0L31.997,1.393004 10.467954,23.597999 0,15.350999 1.2379759,13.780992 10.287961,20.909952z"
                                  Fill="{StaticResource Brush5}"
                                  RenderTransformOrigin="0.5,0.5"
                                  Stretch="Uniform" />
                            <TextBlock HorizontalAlignment="Center"
                                       FontFamily="Segoe UI Light"
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource Brush5}"
                                       Text="Generate"
                                       TextWrapping="Wrap" />
                        </StackPanel>

                    </Button>

                    <StackPanel Grid.Row="0"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Margin="0,10,0,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch">
                        <Path Width="25"
                              Height="25"
                              Margin="4"
                              Data="M16.200012,11.899994C15.5,12.300003 14.799988,12.600006 14.299988,12.800003 13.700012,13 13,13.100006 12.200012,13.199997L12.200012,14.5 14.799988,14.5 14.799988,23.399994C14.799988,24.199997 14.799988,24.699997 14.700012,25 14.600037,25.199997 14.400024,25.399994 14.200012,25.5 14,25.600006 13.5,25.699997 12.799988,25.699997L12.200012,25.699997 12.200012,27 20,27 20,25.699997 19.299988,25.699997C18.700012,25.699997 18.299988,25.699997 18.100037,25.600006 17.900024,25.5 17.700012,25.300003 17.600037,25.100006 17.5,24.899994 17.400024,24.600006 17.400024,24.100006L17.400024,11.899994z M16,5.1000061C15.5,5.1000061 15.100037,5.3000031 14.799988,5.6000061 14.5,5.8999939 14.299988,6.3999939 14.299988,6.8000031 14.299988,7.3000031 14.5,7.6999969 14.799988,8 15.100037,8.3000031 15.600037,8.5 16,8.5 16.5,8.5 16.900024,8.3000031 17.200012,8 17.5,7.6999969 17.700012,7.1999969 17.700012,6.8000031 17.700012,6.3000031 17.5,5.8999939 17.200012,5.6000061 16.900024,5.3000031 16.5,5.1000061 16,5.1000061z M16,0C24.799988,0 32,7.1999969 32,16 32,24.800003 24.799988,32 16,32 7.2000122,32 0,24.800003 0,16 0,7.1999969 7.2000122,0 16,0z"
