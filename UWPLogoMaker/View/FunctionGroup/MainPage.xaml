                              RenderTransformOrigin="0.5,0.5"
                              Stretch="Uniform" />
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontFamily="Segoe UI Light"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   Foreground="#8BC34A"
                                   Text="Tips"
                                   TextWrapping="Wrap" />
                        <StackPanel Grid.Row="0"
                                    Margin="10,20,0,10"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Orientation="Vertical">
                            <StackPanel x:Name="TipsGrid">
                                <TextBlock HorizontalAlignment="Stretch"
                                           VerticalAlignment="Stretch"
                                           FontFamily="Segoe UI Light"
                                           FontWeight="SemiBold"
                                           Foreground="White"
                                           Text="1. Load a image"
                                           TextWrapping="Wrap" />
                                <TextBlock Margin="0,1,0,1"
                                           HorizontalAlignment="Stretch"
                                           VerticalAlignment="Stretch"
                                           FontFamily="Segoe UI Light"
                                           FontWeight="SemiBold"
                                           Foreground="White"
                                           Text="2. Move and zoom image with above sliders"
                                           TextWrapping="Wrap" />
                                <TextBlock Margin="0,1,0,1"
                                           HorizontalAlignment="Stretch"
                                           VerticalAlignment="Stretch"
                                           FontFamily="Segoe UI Light"
                                           FontWeight="SemiBold"
                                           Foreground="White"
                                           Text="3. Choose your logo background color"
                                           TextWrapping="Wrap" />
                                <TextBlock Margin="0,1,0,6"
                                           HorizontalAlignment="Stretch"
                                           VerticalAlignment="Stretch"
                                           FontFamily="Segoe UI Light"
                                           FontWeight="SemiBold"
                                           Foreground="White"
                                           Text="4. Generate with your sizes"
                                           TextWrapping="Wrap" />
                                <Rectangle Height="1"
                                           Margin="-10,0,0,0"
                                           Fill="#9E9E9E" />
                            </StackPanel>
                            <CheckBox x:Name="ShowCenterLineCheckBox"
                                      Margin="10,6,0,0"
                                      Content="Show center lines"
                                      FontFamily="Segoe UI"
                                      Foreground="White"
                                      Style="{StaticResource CheckBoxWhiteStyle}" 
                                      IsChecked="{Binding IsShowCenterLine,
                                                          Mode=TwoWay}" />
                            <CheckBox x:Name="LinkCheckBox"
                                      Margin="10,0,0,0"
                                      Content="Manual adjust square images"
                                      FontFamily="Segoe UI"
                                      IsChecked="{Binding IsManualAdjustSquareImage,
                                                          Mode=TwoWay}"
                                      Style="{StaticResource CheckBoxWhiteStyle}" />
                        </StackPanel>
                    </StackPanel>

                    <Grid Grid.Row="0"
                          Grid.RowSpan="2"
                          Grid.Column="1"
                          Width="0.5"
                          Margin="0,0,0,0.4"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Stretch"
                          Background="#212121" />

                    <Grid Grid.Row="0"
                          Grid.Column="0"
                          Grid.ColumnSpan="2"
                          Height="7"
                          VerticalAlignment="Top"
                          Background="#8BC34A" />

                </Grid>
            </Grid>
        </Grid>

        <Grid Grid.Row="0"
              Grid.RowSpan="2"
              d:IsHidden="True"
              Visibility="{x:Bind Vm.IsShowingProgress, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
            <Grid.Background>
                <SolidColorBrush Opacity="0.8" Color="{StaticResource Color1}" />
            </Grid.Background>

            <ProgressRing Width="50"
                          Height="50"
                          Foreground="{StaticResource Brush5}"
                          IsActive="True" />
        </Grid>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="Desktop">
                <VisualState x:Name="WideVisualState">
                    <VisualState.Setters>
                        <Setter Target="TipsGrid.Visibility" Value="Visible" />
                    </VisualState.Setters>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1366" />
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:Name="NormalVisualState">
                    <VisualState.Setters>
                        <Setter Target="TipsGrid.Visibility" Value="Visible" />
                    </VisualState.Setters>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1024" />
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:Name="CompactVisualState">
                    <VisualState.Setters>
                        <Setter Target="TipsGrid.Visibility" Value="Collapsed" />
                    </VisualState.Setters>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</Page>