                                       Foreground="{StaticResource Brush5}"
                                       Text="Load Image"
                                       TextWrapping="Wrap" />
                        </StackPanel>

                    </Button>

                    <Button Grid.Column="1"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Background="#8BC34A"
                            Tapped="GenerateLogo_OnTapped">

                        <StackPanel Margin="4" VerticalAlignment="Center">
                            <Path Width="30"
                                  Height="30"
