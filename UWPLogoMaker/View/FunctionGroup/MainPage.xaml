                          RenderTransformOrigin="0.5,0.5"
                          Stretch="Uniform" />
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontFamily="Segoe UI Light"
                               FontSize="15"
                               Foreground="#8BC34A"
                               Text="Tips" />
                    <TextBlock Margin="10,20,0,10"
                               FontFamily="Segoe UI Light"
                               FontWeight="SemiBold"
                               Foreground="White"
                               TextWrapping="Wrap">
                        <Run Text="1. Load a image" />
                        <LineBreak />
                        <Run Text="2. Move and zoom image with sliders" />
                        <LineBreak />
                        <Run Text="3. Choose background color" />
                        <LineBreak />
                        <Run Text="4. Select Size groups and click Generate" />
                    </TextBlock>

                    <CheckBox x:Name="ShowCenterLineCheckBox"
                              Margin="10,6,0,0"
                              Content="Show center lines"
                              FontFamily="Segoe UI"
                              IsChecked="{Binding IsShowCenterLine,
                                                  Mode=TwoWay}"
                              Style="{StaticResource CheckBoxWhiteStyle}" />
                    <CheckBox x:Name="LinkCheckBox"
                              Margin="10,0,0,0"
                              Content="Manual adjust square images"
                              FontFamily="Segoe UI"
                              IsChecked="{Binding IsManualAdjustSquareImage,
                                                  Mode=TwoWay}"
                              Style="{StaticResource CheckBoxWhiteStyle}" />
                </StackPanel>

