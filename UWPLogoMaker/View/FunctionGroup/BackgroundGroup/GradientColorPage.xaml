<Page x:Class="UWPLogoMaker.View.FunctionGroup.BackgroundGroup.GradientColorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:UWPLogoMaker.View.FunctionGroup.BackgroundGroup"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      DataContext="{Binding Source={StaticResource Locator},
                            Path=MainVm}"
      mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>



        <StackPanel Grid.Column="0" VerticalAlignment="Center">
            <RadioButton Content="Linear" GroupName="Method" />
            <RadioButton Content="Radial" GroupName="Method" />
        </StackPanel>

        <Grid Grid.Column="1">
        </Grid>

    </Grid>
</Page>
