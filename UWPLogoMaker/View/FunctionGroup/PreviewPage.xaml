                             Margin="4"
                             BorderBrush="#424242"
                             Foreground="#424242"
                             GotFocus="TextBox_GotFocus"
                             LostFocus="TextBox_LostFocus"
                             Text="{Binding ZoomF, Mode=TwoWay, Converter={StaticResource FloatToStringConverter}}"
                             TextChanged="TextBox_TextChanged" />
                </Grid>

                <Grid Grid.Row="0"
                      Grid.Column="1"
                      Background="{StaticResource Brush5}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock x:Uid="PreviewPage_YPosTextBlock"
                               Grid.Row="0"
                               Margin="4"
                               HorizontalAlignment="Center"
                               Text="Y Pos" />
                    <Slider x:Name="YPos"
                            Grid.Row="1"
                            HorizontalAlignment="Center"
                            Background="#424242"
                            Orientation="Vertical"
                            SmallChange="0.01"
                            TickFrequency="10"
                            TickPlacement="Outside"
                            Value="{Binding Y, Mode=TwoWay}" />
                    <TextBox Grid.Row="2"
                             Margin="4"
                             BorderBrush="#424242"
                             Foreground="#424242"
                             GotFocus="TextBox_GotFocus"
                             LostFocus="TextBox_LostFocus"
                             Text="{Binding Y, Mode=TwoWay, Converter={StaticResource FloatToStringConverter}, ConverterParameter=hello}"
                             TextChanged="TextBox_TextChanged" />
                </Grid>

                <Grid Grid.Row="1" Grid.Column="1">
                    <Rectangle Margin="4"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Stretch"
                               Fill="#424242" />
                    <Button Margin="4"
