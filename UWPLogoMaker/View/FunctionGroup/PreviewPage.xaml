                    <Run Text="Width: " />
                    <Run Text="{x:Bind Vm.MaxWidth, Mode=OneWay}" />
                </TextBlock>
                <TextBlock>
                    <Run Text="Height: " />
                    <Run Text="{x:Bind Vm.MaxHeight, Mode=OneWay}" />
                </TextBlock>
            </StackPanel>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Viewbox Grid.Row="0"
                         Grid.Column="0"
                         MaxWidth="300"
                         MaxHeight="300"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         Stretch="Uniform"
                         StretchDirection="DownOnly">

                    <Border BorderBrush="{StaticResource Brush1}" BorderThickness="1">
                        <Grid>
                            <xaml:CanvasControl x:Name="SquareCanvasControl"
                                                Width="300"
                                                Height="300"
                                                HorizontalAlignment="Stretch"
                                                VerticalAlignment="Stretch"
                                                Draw="SquareCanvasControl_OnDraw" />
                            <Line helpers:Extension.IsVisible="{x:Bind Vm.IsShowCenterLine, Mode=OneWay}"
                                  Fill="{StaticResource Brush5}"
                                  Stroke="{StaticResource Brush1}"
                                  X1="150"
                                  X2="150"
                                  Y1="0"
                                  Y2="300" />
                            <Line helpers:Extension.IsVisible="{x:Bind Vm.IsShowCenterLine, Mode=OneWay}"
                                  Fill="{StaticResource Brush5}"
                                  Stroke="{StaticResource Brush1}"
                                  X1="300"
                                  X2="0"
                                  Y1="150"
                                  Y2="150" />
                        </Grid>
                    </Border>

                </Viewbox>

                <Grid Grid.Row="1"
                      Grid.Column="0"
                      helpers:Extension.IsVisible="{x:Bind Vm.IsManualAdjustSquareImage, Mode=OneWay}"
                      Background="{StaticResource Brush5}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock x:Uid="PreviewPage_XPosTextBlock"
                               Grid.Row="0"
                               Grid.Column="0"
                               Margin="4"
                               VerticalAlignment="Center"
                               Text="X Pos" />
                    <Slider x:Name="SqXPos"
                            Grid.Row="0"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Background="#424242"
                            SmallChange="1"
                            TickFrequency="10"
                            TickPlacement="Outside"
                            Value="{Binding SX, Mode=TwoWay}" />
                    <TextBox Grid.Row="0"
                             Grid.Column="2"
                             Margin="4"
                             BorderBrush="#424242"
                             Foreground="#424242"
                             GotFocus="TextBox_GotFocus"
                             LostFocus="TextBox_LostFocus"
                             Text="{Binding SX, Mode=TwoWay, Converter={StaticResource FloatToStringConverter}, ConverterParameter=hello}"
                             TextChanged="TextBox_TextChanged" />
                    <TextBlock x:Uid="PreviewPage_ZoomTextBlock"
                               Grid.Row="1"
                               Grid.Column="0"
                               Margin="4"
                               VerticalAlignment="Center"
                               Text="Zoom" />
                    <Slider x:Name="SqZoom"
                            Grid.Row="1"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Background="#424242"
                            Maximum="200"
                            Minimum="1"
                            TickFrequency="1"
                            TickPlacement="Outside"
                            ValueChanged="SZoom_ValueChanged"
                            Value="{Binding SZoomFBefore, Mode=TwoWay}" />
                    <TextBox Grid.Row="1"
                             Grid.Column="2"
                             Margin="4"
                             BorderBrush="#424242"
                             Foreground="#424242"
                             GotFocus="TextBox_GotFocus"
                             LostFocus="TextBox_LostFocus"
                             Text="{Binding SZoomF, Mode=TwoWay, Converter={StaticResource FloatToStringConverter}}"
                             TextChanged="TextBox_TextChanged" />
                </Grid>

                <Grid Grid.Row="0"
                      Grid.Column="1"
                      helpers:Extension.IsVisible="{x:Bind Vm.IsManualAdjustSquareImage, Mode=OneWay}"
                      Background="{StaticResource Brush5}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock x:Uid="PreviewPage_YPosTextBlock"
                               Grid.Row="0"
                               Margin="4"
                               HorizontalAlignment="Center"
                               Text="Y Pos" />
                    <Slider x:Name="SqYPos"
                            Grid.Row="1"
                            HorizontalAlignment="Center"
                            Background="#424242"
                            Orientation="Vertical"
                            SmallChange="0.01"
                            TickFrequency="10"
                            TickPlacement="Outside"
                            Value="{Binding SY, Mode=TwoWay}" />
                    <TextBox Grid.Row="2"
                             Margin="4"
                             BorderBrush="#424242"
                             Foreground="#424242"
                             GotFocus="TextBox_GotFocus"
                             LostFocus="TextBox_LostFocus"
                             Text="{Binding SY, Mode=TwoWay, Converter={StaticResource FloatToStringConverter}, ConverterParameter=hello}"
                             TextChanged="TextBox_TextChanged" />
                </Grid>

