<Page x:Class="UWPLogoMaker.View.FunctionGroup.PreviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:converter="using:UWPLogoMaker.Utilities.Converter"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:helpers="using:UWPLogoMaker.Utilities.Helpers"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:model="using:UWPLogoMaker.Model"
      xmlns:xaml="using:Microsoft.Graphics.Canvas.UI.Xaml"
      DataContext="{Binding Source={StaticResource Locator}, Path=MainVm}"
      mc:Ignorable="d">

    <Page.Resources>

        <converter:FloatToStringConverter x:Key="FloatToStringConverter" />
        <converter:DoubleToStringConverter x:Key="DoubleToStringConverter" />
        <DataTemplate x:Key="PlatformDataTemplate" x:DataType="model:Platform">
            <Grid Width="44" Height="44">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="14"
                           Foreground="White"
                           Text="{x:Bind Icon, Mode=OneWay}" />
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Rectangle Grid.Row="1"
                   Grid.Column="1"
                   Grid.ColumnSpan="2"
                   Margin="4"
                   Visibility="Visible">
            <Rectangle.Fill>
                <ImageBrush ImageSource="ms-appx:///Assets/Resources/checkerboard.png" Stretch="UniformToFill" />
            </Rectangle.Fill>
        </Rectangle>

        <Rectangle Grid.Row="1"
                   Grid.Column="1"
                   Grid.ColumnSpan="2"
                   Margin="4"
                   Fill="{x:Bind Vm.BackgroundVm.ColorBackgroundVm.CurrentBrush, Mode=OneWay}"
                   Visibility="Visible" />

        <Grid Grid.Row="1"
              Grid.Column="1"
              Margin="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="{StaticResource Brush5}"
                        Visibility="Collapsed">
                <StackPanel Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center" Text="X:" />
                    <TextBox GotFocus="TextBox_GotFocus"
                             LostFocus="TextBox_LostFocus"
                             Text="{Binding X, Mode=TwoWay, Converter={StaticResource FloatToStringConverter}}"
                             TextChanged="TextBox_TextChanged" />
                    <TextBlock VerticalAlignment="Center" Text="Y:" />
                    <TextBox GotFocus="TextBox_GotFocus"
                             LostFocus="TextBox_LostFocus"
                             Text="{Binding Y, Mode=TwoWay, Converter={StaticResource FloatToStringConverter}}"
                             TextChanged="TextBox_TextChanged" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center" Text="Rectangle W:" />
                    <TextBox GotFocus="TextBox_GotFocus"
                             LostFocus="TextBox_LostFocus"
                             Text="{Binding RectangleWidth, Mode=TwoWay, Converter={StaticResource DoubleToStringConverter}}"
                             TextChanged="TextBox_TextChanged" />
                    <TextBlock VerticalAlignment="Center" Text="Rectangle H:" />
                    <TextBox GotFocus="TextBox_GotFocus"
                             LostFocus="TextBox_LostFocus"
                             Text="{Binding RectangleHeight, Mode=TwoWay, Converter={StaticResource DoubleToStringConverter}}"
                             TextChanged="TextBox_TextChanged" />
                </StackPanel>
            </StackPanel>
            <StackPanel Grid.Row="0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Background="{StaticResource Brush5}"
                        Visibility="Collapsed">
                <TextBlock Text="Image Dimension" />
                <TextBlock>
                    <Run Text="Width: " />
                    <Run Text="{x:Bind Vm.MaxWidth, Mode=OneWay}" />
                </TextBlock>
                <TextBlock>
                    <Run Text="Height: " />
                    <Run Text="{x:Bind Vm.MaxHeight, Mode=OneWay}" />
                </TextBlock>
            </StackPanel>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Viewbox Grid.Row="0"
                         Grid.Column="0"
                         MaxWidth="620"
                         MaxHeight="300"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         Stretch="Uniform"
                         StretchDirection="DownOnly">

                    <Border BorderBrush="{StaticResource Brush1}" BorderThickness="1">
                        <Grid>
                            <xaml:CanvasControl x:Name="WideCanvasControl"
                                                Width="620"
                                                Height="300"
                                                HorizontalAlignment="Stretch"
                                                VerticalAlignment="Stretch"
                                                Background="Transparent"
                                                Draw="CanvasControl_Draw" 
                                                CreateResources="WideCanvasControl_OnCreateResources"/>
                            <Line helpers:Extension.IsVisible="{Binding IsShowCenterLine, Mode=OneWay}"
                                  Fill="{StaticResource Brush5}"
                                  Stroke="{StaticResource Brush1}"
                                  X1="310"
                                  X2="310"
                                  Y1="0"
                                  Y2="300" />
                            <Line helpers:Extension.IsVisible="{Binding IsShowCenterLine, Mode=OneWay}"
                                  Fill="{StaticResource Brush5}"
                                  Stroke="{StaticResource Brush1}"
                                  X1="620"
                                  X2="0"
                                  Y1="150"
                                  Y2="150" />
                        </Grid>
                    </Border>

                </Viewbox>

                <Grid Grid.Row="1"
                      Grid.Column="0"
                      Background="{StaticResource Brush5}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock x:Uid="PreviewPage_XPosTextBlock"
                               Grid.Row="0"
                               Grid.Column="0"
                               Margin="4"
                               VerticalAlignment="Center"
                               Text="X Pos" />
                    <Slider x:Name="XPos"
                            Grid.Row="0"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Background="#424242"
                            SmallChange="1"
                            TickFrequency="10"
                            TickPlacement="Outside"
                            Value="{Binding X, Mode=TwoWay}" />
                    <TextBox Grid.Row="0"
                             Grid.Column="2"
                             Margin="4"
                             BorderBrush="#424242"
                             Foreground="#424242"
                             GotFocus="TextBox_GotFocus"
                             LostFocus="TextBox_LostFocus"
                             Text="{Binding X, Mode=TwoWay, Converter={StaticResource FloatToStringConverter}, ConverterParameter=hello}"
                             TextChanged="TextBox_TextChanged" />
                    <TextBlock x:Uid="PreviewPage_ZoomTextBlock"
                               Grid.Row="1"
                               Grid.Column="0"
                               Margin="4"
                               VerticalAlignment="Center"
                               Text="Zoom" />
                    <Slider x:Name="Zoom"
                            Grid.Row="1"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Background="#424242"
                            Maximum="400"
                            Minimum="1"
                            TickFrequency="1"
                            TickPlacement="Outside"
                            ValueChanged="Zoom_ValueChanged"
                            Value="{Binding ZoomFBefore, Mode=TwoWay}" />
