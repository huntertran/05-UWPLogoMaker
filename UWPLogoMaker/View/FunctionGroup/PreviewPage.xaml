                                  Fill="White"
                                  RenderTransformOrigin="0.5,0.5"
                                  Stretch="Uniform" />
                            <TextBlock HorizontalAlignment="Center"
                                       FontFamily="Segoe UI Light"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       Text="Reset"
                                       TextWrapping="Wrap" />
                        </StackPanel>
                    </Button>
                </Grid>

            </Grid>

        </Grid>

        <Grid Grid.Row="1"
              Grid.Column="2"
              Margin="4">
