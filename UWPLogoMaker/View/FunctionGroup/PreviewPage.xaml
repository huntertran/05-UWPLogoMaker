                             LostFocus="TextBox_LostFocus"
                             Text="{Binding SquareRectangleHeight, Mode=TwoWay, Converter={StaticResource DoubleToStringConverter}}"
                             TextChanged="TextBox_TextChanged" />
                </StackPanel>
            </StackPanel>
