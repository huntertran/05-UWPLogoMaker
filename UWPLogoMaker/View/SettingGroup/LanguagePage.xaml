<Page x:Class="UWPLogoMaker.View.SettingGroup.LanguagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:UWPLogoMaker.View.SettingGroup"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel>
            <TextBlock Text="Change display language" />
            <ListBox MaxWidth="150"
                     Margin="0,4,0,0"
                     HorizontalAlignment="Left">
                <ListBoxItem Content="English" Tapped="English_OnTapped"/>
                <ListBoxItem Content="Vietnamese" Tapped="Vietnamese_OnTapped"/>
            </ListBox>
        </StackPanel>
    </Grid>
</Page>
